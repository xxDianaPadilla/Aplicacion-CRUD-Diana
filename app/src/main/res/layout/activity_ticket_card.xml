<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="425dp"
        android:padding="8dp">

        <TextView
            android:id="@+id/txtTicketNum"
            android:layout_width="370dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:text="TextView"
            android:textColor="#1D34B5"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.555"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtTicketTitle"
            android:layout_width="370dp"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            android:text="TextView"
            android:textColor="#1D34B5"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.555"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtTicketNum" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="370dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:text="TextView"
            android:textColor="#1D34B5"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.555"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtTicketTitle" />

        <TextView
            android:id="@+id/txtTicketAuthor"
            android:layout_width="370dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:text="TextView"
            android:textColor="#1D34B5"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.555"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView13" />

        <TextView
            android:id="@+id/txtAuthorEmail"
            android:layout_width="370dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:text="TextView"
            android:textColor="#1D34B5"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtTicketAuthor" />

        <TextView
            android:id="@+id/txtTicketCreationDate"
            android:layout_width="370dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:text="TextView"
            android:textColor="#1D34B5"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.555"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtAuthorEmail" />

        <TextView
            android:id="@+id/txtTicketStatus"
            android:layout_width="370dp"
            android:layout_height="30dp"
            android:layout_marginTop="12dp"
            android:text="TextView"
            android:textColor="#1D34B5"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.555"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtTicketCreationDate" />

        <TextView
            android:id="@+id/txtFinalDate"
            android:layout_width="370dp"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            android:text="TextView"
            android:textColor="#1D34B5"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.555"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtTicketStatus" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="120dp"
            android:layout_height="58dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageView4"
            app:layout_constraintHorizontal_bias="0.731"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtFinalDate"
            app:layout_constraintVertical_bias="0.961"
            app:srcCompat="@drawable/ic_delete_data" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="118dp"
            android:layout_height="59dp"
            android:layout_marginEnd="44dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtFinalDate"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/ic_edit_data" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>